@model Netflex.Models.Blog.DetailBlogViewModels

@{
    ViewData["Title"] = Model.Title;
    Layout = "_Layout";
}

<div class="container">
    <div class="mt-3">
        <h2 class="text-white-70">@Model.Title</h2>
        <p class="text-smm">
            <strong>@Model.CreatorName</strong>&nbsp;
            @Model.CreatedAt.ToString("MMMM d, yyyy")
        </p>
        <hr />
        <p>@Html.Raw(Model.Content)</p>
    </div>

    <a href="@Url.Action("index", "blog")">Tin tức</a>

    <div class="comment-section mt-3">
        <div class="fb-comments" data-href="@ViewData["Domain"]/Blog/Details/@Model.Id" data-width="100%" data-numposts="5"></div>
    </div>
</div>
<div id="fb-root"></div>
<script async defer crossorigin="anonymous"
    src="https://connect.facebook.net/vi_VN/sdk.js#xfbml=1&version=v22.0&appId=1589497395335451"></script>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        var commentSection = document.querySelector(".comment-section");
        commentSection.style.opacity = "0";
        commentSection.style.transition = "opacity 0.5s ease-in-out";

        window.addEventListener("scroll", function () {
            var rect = commentSection.getBoundingClientRect();
            if (rect.top < window.innerHeight && rect.bottom >= 0) {
                commentSection.style.opacity = "1";
            }
        });
    });
</script>
