@model Netflex.Models.Actor.EditActorViewModel
@{
    Layout = "_AdminLayout";
}

<h2>Chỉnh sửa diễn viên</h2>
<form asp-action="Edit" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label>Tên</label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="form-group">
        <label>Ảnh</label>
        @if (!string.IsNullOrEmpty(Model.Photo))
        {
            <img src="@Model.Photo" alt="Ảnh diễn viên" width="100" />
        }
        <input type="file" name="photoFile" class="form-control" />
    </div>

    <div class="form-group">
        <label>Tiểu sử</label>
        <textarea asp-for="About" class="form-control"></textarea>
    </div>

    <button type="submit" class="btn btn-success">Cập nhật</button>
</form>
